# Environment Configuration for MCP Docker Gateway
# Copy this file to .env and update the values

# Database Configuration
POSTGRES_PASSWORD=your-secure-postgres-password

# Application Security
SECRET_KEY=your-very-secure-secret-key-minimum-32-characters

# Monitoring (optional)
GRAFANA_PASSWORD=your-grafana-admin-password

# API Configuration (optional overrides)
ALLOWED_HOSTS=["localhost", "127.0.0.1", "your-domain.com"]
DEBUG=false
LOG_LEVEL=INFO

# Docker Registry (for production deployment)
DOCKER_REGISTRY=your-registry.com
IMAGE_TAG=latest

# SSL/TLS Configuration (if using reverse proxy)
SSL_CERT_PATH=/path/to/ssl/cert
SSL_KEY_PATH=/path/to/ssl/key

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket

# Performance Tuning
BACKEND_WORKERS=1
POSTGRES_MAX_CONNECTIONS=100
REDIS_MAX_MEMORY=256mb