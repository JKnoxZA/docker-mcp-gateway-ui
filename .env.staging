# Staging Environment Configuration
ENVIRONMENT=staging

# Application
DEBUG=false
LOG_LEVEL=INFO

# Database (staging database)
# DATABASE_URL=postgresql+asyncpg://user:password@staging-db:port/database
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_ECHO=false

# Redis (staging redis)
# REDIS_URL=redis://staging-redis:6379
REDIS_MAX_CONNECTIONS=20

# Security (staging values)
# SECRET_KEY=staging-secret-key-change-for-production
# ALLOWED_HOSTS=["staging.example.com", "*.staging.example.com"]
# CORS_ORIGINS=["https://staging.example.com"]
CORS_CREDENTIALS=true
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=2
RELOAD=false

# Docker
DOCKER_TIMEOUT=45

# MCP Configuration
MCP_CONFIG_PATH=/config
MCP_WORKSPACE_PATH=/tmp/mcp_workspace
MCP_SERVER_TIMEOUT=45

# Logging (shorter retention for staging)
LOG_TO_FILE=true
LOG_RETENTION_DAYS=7
LOG_ROTATION_SIZE=50 MB

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30