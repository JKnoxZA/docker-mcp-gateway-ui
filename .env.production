# Production Environment Configuration
ENVIRONMENT=production

# Application
DEBUG=false
LOG_LEVEL=INFO
LOG_FORMAT=json

# Database (MUST be set in production)
# DATABASE_URL=postgresql+asyncpg://user:password@host:port/database
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_ECHO=false

# Redis (MUST be set in production)
# REDIS_URL=redis://user:password@host:port
REDIS_MAX_CONNECTIONS=50

# Security (MUST be set in production)
# SECRET_KEY=your-very-secure-secret-key-minimum-32-characters
# ALLOWED_HOSTS=["yourdomain.com", "*.yourdomain.com"]
# CORS_ORIGINS=["https://yourdomain.com"]
CORS_CREDENTIALS=true
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=false

# Docker
DOCKER_TIMEOUT=60
DOCKER_TLS_VERIFY=true

# MCP Configuration
MCP_CONFIG_PATH=/config
MCP_WORKSPACE_PATH=/tmp/mcp_workspace
MCP_SERVER_TIMEOUT=60

# Logging
LOG_TO_FILE=true
LOG_RETENTION_DAYS=90
LOG_ROTATION_SIZE=100 MB

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=60