# Development Environment Configuration
ENVIRONMENT=development

# Application
DEBUG=true
LOG_LEVEL=DEBUG

# Database
DATABASE_URL=sqlite+aiosqlite:///./dev.db
DATABASE_ECHO=true

# Redis
REDIS_URL=redis://localhost:6379

# Security (development only - change in production)
SECRET_KEY=development-secret-key-change-in-production-minimum-32-chars
ALLOWED_HOSTS=["*"]
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# Server
HOST=0.0.0.0
PORT=8000
RELOAD=true
WORKERS=1

# Docker
DOCKER_TIMEOUT=30

# MCP Configuration
MCP_CONFIG_PATH=./config
MCP_WORKSPACE_PATH=./workspace

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090