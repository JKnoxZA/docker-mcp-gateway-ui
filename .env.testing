# Testing Environment Configuration
ENVIRONMENT=testing

# Application
DEBUG=true
LOG_LEVEL=WARNING  # Reduce noise in tests

# Database (in-memory for tests)
DATABASE_URL=sqlite+aiosqlite:///:memory:
DATABASE_ECHO=false

# Redis (can use fake redis or real instance)
REDIS_URL=redis://localhost:6379

# Security (test values)
SECRET_KEY=test-secret-key-minimum-32-characters-long
ALLOWED_HOSTS=["*"]
CORS_ORIGINS=["*"]
ACCESS_TOKEN_EXPIRE_MINUTES=5

# Server
HOST=127.0.0.1
PORT=8001  # Different port to avoid conflicts
WORKERS=1
RELOAD=false

# Docker (fast timeouts for tests)
DOCKER_TIMEOUT=5

# MCP Configuration (test paths)
MCP_CONFIG_PATH=./test_config
MCP_WORKSPACE_PATH=./test_workspace
MCP_SERVER_TIMEOUT=5

# Monitoring (disabled for tests)
ENABLE_METRICS=false
LOG_TO_FILE=false